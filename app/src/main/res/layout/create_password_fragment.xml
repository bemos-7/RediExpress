<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/almost_done_text"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almost done"
            android:textColor="@color/black"
            android:textSize="24dp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Create a password to log in or skip it. Fingerprint can be used"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeat_password"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="left"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_square_right"
            android:layout_marginRight="11dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat password"
            android:textColor="@color/black"
            android:textSize="24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="59dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="36dp"
            android:enabled="false"
            android:background="@drawable/circle_create_pass_item"/>

        <TextView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="36dp"
            android:enabled="false"
            android:background="@drawable/circle_create_pass_item"/>

        <TextView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="36dp"
            android:enabled="false"
            android:background="@drawable/circle_create_pass_item"/>

        <TextView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:enabled="false"
            android:background="@drawable/circle_create_pass_item"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="56dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pass_one"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/circle_pin"
                android:text="1"
                android:textSize="55dp"/>

            <Button
                android:id="@+id/pass_two"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/circle_pin"
                android:text="2"
                android:textSize="55dp"/>

            <Button
                android:id="@+id/pass_three"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/circle_pin"
                android:text="3"
                android:textSize="55dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pass_four"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/circle_pin"
                android:text="4"
                android:textSize="55dp"/>

            <Button
                android:id="@+id/pass_five"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/circle_pin"
                android:text="5"
                android:textSize="55dp"/>

            <Button
                android:id="@+id/pass_six"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/circle_pin"
                android:text="6"
                android:textSize="55dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pass_seven"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/circle_pin"
                android:text="7"
                android:textSize="55dp"/>

            <Button
                android:id="@+id/pass_eight"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/circle_pin"
                android:text="8"
                android:textSize="55dp"/>

            <Button
                android:id="@+id/pass_nine"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/circle_pin"
                android:text="9"
                android:textSize="55dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pass_back"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/button_line"
                android:textSize="55dp"/>

            <Button
                android:id="@+id/pass_zero"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginRight="26dp"
                android:background="@drawable/circle_pin"
                android:text="0"
                android:textSize="55dp"/>

            <ImageView
                android:id="@+id/pass_fingerprint"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/button_fingerprint"
                android:textSize="55dp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you want, you can "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="skip "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this step"/>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>