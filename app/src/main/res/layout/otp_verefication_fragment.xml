<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="80dp"
        android:orientation="vertical">




        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="OTP Verefication" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_weight="1"
            android:text="Enter the 6 digit numbers sent to your email" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="52dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/one_digit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="30dp"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/input_text_correct"/>

            <EditText
                android:id="@+id/two_digit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginRight="30dp"
                android:background="@drawable/input_text_correct"/>

            <EditText
                android:id="@+id/three_digit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginRight="30dp"
                android:background="@drawable/input_text_correct"/>

            <EditText
                android:id="@+id/four_digit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginRight="30dp"
                android:background="@drawable/input_text_correct"/>

            <EditText
                android:id="@+id/five_digit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginRight="30dp"
                android:background="@drawable/input_text_correct"/>

            <EditText
                android:id="@+id/six_digit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/input_text_correct"/>

        </LinearLayout>

        <TextView
            android:id="@+id/timer_text"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_gray"
            android:text="If you didnâ€™t receive code, resend after 1:00"/>

        <Button
            android:layout_marginTop="82dp"
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_sign_reg"
            android:textColor="@color/white"
            android:enabled="false"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Set New Password" />


    </LinearLayout>

</LinearLayout>