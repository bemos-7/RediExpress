<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="top|center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_marginTop="200dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:progressDrawable="@drawable/custom_progress_bar" />

        <TextView
            android:id="@+id/track_text"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Your rider is on the way to your destination"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tracking Number "/>

            <TextView
                android:id="@+id/track_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="150dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/track_my_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Track my item"/>

            <Button
                android:id="@+id/go_back_to_homepage"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_white_stroke"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:text="Go back to homepage"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>